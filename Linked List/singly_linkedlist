#include <stdio.h>
#include <stdlib.h>

typedef struct Node {
  int value;
  struct Node *next;
} Node;

int main() {
  Node *head = NULL;
  Node *tail = NULL;
  Node *curr;

  int val;
  do {
    printf("Enter a number (0 to exit): ");
    scanf("%d", &val);

    if (val != 0) {
      curr = (Node*)malloc(sizeof(Node));
      curr->next = NULL;
      curr->value = val;

      if (head == NULL) {
        head = curr;
        tail = curr;
      } else {
        tail->next = curr;
        tail = curr;
      }
    }
  } while (val != 0);

  curr = head;
  do {
    printf("%d\n", curr->value);
    curr = curr->next;
  } while (curr != NULL);
}
